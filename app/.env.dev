# ENVIRONMENT
ENV=development
DEBUG=True

# SECRET KEYS (có thể dùng key đơn giản khi dev)
SECRET_KEY=dev-secret-key
REFRESH_SECRET_KEY=dev-refresh-secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE=86400
REFRESH_TOKEN_EXPIRE=31536000

# COOKIE CONFIG
SECIRE_HTTPS=False
SAMESITE=Lax
EXPIRATION_MAX_AGE=600000

# CORS - allow localhost frontend
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# DATABASE (MySQL + asyncmy)
SQLALCHEMY_DATABASE_URI=mysql+asyncmy://devuser:devpass@localhost:3306/devdb
SQLALCHEMY_POOL_SIZE=5
SQLALCHEMY_MAX_OVERFLOW=10
SQLALCHEMY_POOL_RECYCLE=1800
SQLALCHEMY_POOL_TIMEOUT=30
SQLALCHEMY_ECHO=True
SQLALCHEMY_TRACK_MODIFICATIONS=False

# MONGODB
MONGO_URI=mongodb://localhost:27017
DB_NAME=devdb
MONGO_MAX_POOL_SIZE=50
MONGO_MIN_POOL_SIZE=5
MONGO_CONNECT_TIMEOUT_MS=30000
MONGO_SERVER_SELECTION_TIMEOUT_MS=30000
MONGO_SOCKET_TIMEOUT_MS=30000
MONGO_WAIT_QUEUE_TIMEOUT_MS=30000
MONGO_RETRY_WRITES=True
MONGO_WRITE_CONCERN=majority
MONGO_JOURNAL=True
MONGO_TZ_AWARE=True

# MINIO (chạy local)
MINIO_ENDPOINT=localhost:9000
MINIO_IP_ADDRESS=localhost
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=admin123
MINIO_BUCKET_NAME=dev-bucket
MINIO_SECURE=False
MINIO_FILE_TYPES=image/jpeg,image/png,application/pdf

# REDIS
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
